{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "TradingPlatform.RiskManagement": "Debug"
    }
  },
  "RiskManagement": {
    "MonitoringIntervalSeconds": 2,
    "RiskLimits": {
      "MaxDailyLoss": 5000.0,
      "MaxDrawdown": 10000.0,
      "MaxPositionSize": 50000.0,
      "MaxTotalExposure": 200000.0,
      "MaxSymbolConcentration": 0.15,
      "MaxPositions": 10,
      "EnableStopLoss": true
    }
  }
}