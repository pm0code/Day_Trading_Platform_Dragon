<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <!-- Disable CA2007 for test projects (ConfigureAwait not needed in tests) -->
    <NoWarn>$(NoWarn);CA2007</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../MarketAnalyzer.Infrastructure.TechnicalAnalysis/MarketAnalyzer.Infrastructure.TechnicalAnalysis.csproj" />
    <ProjectReference Include="../../Foundation/MarketAnalyzer.Foundation/MarketAnalyzer.Foundation.csproj" />
    <ProjectReference Include="../../Domain/MarketAnalyzer.Domain/MarketAnalyzer.Domain.csproj" />
  </ItemGroup>

  <!-- Test packages are automatically included by Directory.Build.props for test projects -->
  
  <ItemGroup>
    <!-- Additional test packages specific to TechnicalAnalysis -->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.1" />
  </ItemGroup>

</Project>