<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../Foundation/MarketAnalyzer.Foundation/MarketAnalyzer.Foundation.csproj" />
    <ProjectReference Include="../../Domain/MarketAnalyzer.Domain/MarketAnalyzer.Domain.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- HTTP client and resilience patterns (industry standard) -->
    <PackageReference Include="Polly.Extensions.Http" Version="3.0.0" />
    <PackageReference Include="Polly" Version="8.2.0" />
    
    <!-- Rate limiting (.NET built-in) -->
    <PackageReference Include="System.Threading.RateLimiting" Version="8.0.0" />
    
    <!-- Caching (Microsoft standard) -->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="8.0.1" />
    
    <!-- Configuration and options pattern -->
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="8.0.0" />
    
    <!-- WebSocket client for real-time data -->
    <PackageReference Include="System.Net.WebSockets.Client" Version="4.3.2" />
    
    <!-- JSON serialization (high performance built-in) -->
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
    
    <!-- HTTP client factory -->
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.1" />
  </ItemGroup>

</Project>
